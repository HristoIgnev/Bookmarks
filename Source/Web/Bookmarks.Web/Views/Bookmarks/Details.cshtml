@using Bookmarks.Web.ViewModels.Bookmarks
@using Bookmarks.Web.App_Code
@model BookmarkDetailViewModel
<div class="container detailsContainer">
    <div class="row">
        <div class="col-md-6">
            <img class="img-responsive" src="@Model.SnapshotBase64String" />
        </div>
        <div class="col-md-6">
            <div class="row">
                <div class="col-xs-3 text-center">
                    <strong>Website:</strong>
                </div>
                <div class="col-xs-9">
                    <img src="@Model.WebSite.FaviconBase64String" />&nbsp;
                    @Model.WebSite.Name
                </div>
            </div>
            <div class="row">
                <div class="col-xs-3 text-center ">
                    <strong>Title:</strong>
                </div>
                <div class="col-xs-9 bm-thumb-title">
                    @Model.Title
                </div>
            </div>
            <div class="row">
                <div class="col-xs-3 text-center">
                    <strong>Url:</strong>
                </div>
                <div class="col-xs-9">
                    <a href="@Model.Url" target="_blank">@Model.Url</a>
                </div>
            </div>
            <div class="row">
                <div class="col-xs-3 text-center">
                    <strong>Description:</strong>
                </div>
                <div class="col-xs-9">
                    @if (string.IsNullOrWhiteSpace(Model.Description))
                    {
                        @:No description
                    }
                    else
                    {
                        @Model.Description
                    }
                </div>
            </div>
            <div class="row">
                <div class="col-xs-3 text-center">
                    <strong>Tags:</strong>
                </div>
                <div class="col-xs-9 text-left">
                    <div >
                        @foreach (var tag in Model.Tags)
                        {
                            <span class="label label-success text-center label-tag">@tag.Name</span>
                        }
                    </div>
                </div>               
            </div>
            <div class="row">
                <br />
                <div class="col-xs-2 col-xs-offset-4">
                    @Html.ActionLink("Edit","Edit","Bookmarks",new { id = Model.Id, title = Html.Sanitize(Model.Title) }, new { @class= "btn btn-primary" })                 
                </div>
                <div class="col-xs-2">
                    @Html.ActionLink("Delete", "Delete", "Bookmarks", new { id = Model.Id }, new { @class = "btn btn-danger" })
                </div>
            </div>
            
        </div>
    </div>
</div>