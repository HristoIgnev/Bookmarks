@using Bookmarks.Web.ViewModels.Tags
@model IEnumerable<TagsViewModel>
<div class="container">
    <ul class="nav nav-pills" role="tablist">
        @{
            char nextChar = char.MaxValue;
            foreach (var tag in Model)
            {
                char currentChar = tag.Name[0];
                if (currentChar != nextChar)
                {
                    <br />
                    <br />
                    <div class="row">
                        <li><strong class="text-uppercase">@currentChar</strong><hr class="delimater" /></li>
                    </div>
                    nextChar = currentChar;
                }
                <li role="presentation">
                    <a href="@Url.Action("ByTag","Bookmarks", new { name = tag.Name })">

                        @tag.Name
                        <span class="badge">
                            @tag.UsedTimes
                        </span>
                    </a>
                </li>
            }
        }
    </ul>
</div>