@using Bookmarks.Web.ViewModels.Bookmarks
@using Bookmarks.Web.App_Code
@model IEnumerable<ThumbnailBookmarkViewModel>
<div id="bm-tiles" class="row">
    @{
        int counter = 0;
        foreach (var bookmark in Model)
        {
            <div class="col-md-2 bookmark" data-title="@bookmark.Title">
                <a class="thumbnail" href="@bookmark.Url" title="@bookmark.Title" target="_blank">
                    <div class="row">
                        <div class="col-xs-2">
                            <img src="@bookmark.FaviconBase64String" />
                        </div>
                        <div class="col-xs-9 text-center bm-thumb-title">
                            @bookmark.Title
                        </div>
                    </div>
                    <div class="row">
                        <div class="crop col-xs-12">
                            <img class="img-responsive " src="@bookmark.SnapshotBase64String" />
                        </div>
                    </div>
                </a>
                <div class="row details">
                    <div class="col-xs-6 text-center">
                        @Html.ActionLink("Details", "Details", "Bookmarks", new { id = bookmark.Id, title = Html.Sanitize(bookmark.Title) }, null)
                    </div>
                    <div class="col-xs-6 text-center">
                        @*@Html.ActionLink("Remove", "Remove", "Bookmarks", new { id = bookmark.Id }, null)*@
                        <button type="button" class="btn-link removeBookmark" data-btn="@bookmark.Title">Remove</button>
                    </div>
                </div>
            </div>
            counter += 1;
        }
    }
</div>